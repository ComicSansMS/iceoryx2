package(default_visibility = ["//visibility:public"])

load("@rules_rust//rust:defs.bzl", "rust_library", "rust_test_suite")

filegroup(
    name = "all_srcs",
    srcs = glob(["**"]),
)

rust_library(
    name = "iceoryx2-userland-record-and-replay",
    srcs = glob(["src/**/*.rs"]),
    deps = [
        "//iceoryx2:iceoryx2",
        "//iceoryx2-cal:iceoryx2-cal",
        "//iceoryx2-bb/elementary:iceoryx2-bb-elementary",
        "//iceoryx2-bb/posix:iceoryx2-bb-posix",
        "//iceoryx2-bb/system-types:iceoryx2-bb-system-types",
        "//iceoryx2-bb/log:iceoryx2-bb-log",
        "//iceoryx2-bb/container:iceoryx2-bb-container",
        "@crate_index//:anyhow",
        "@crate_index//:serde",
    ],
)

rust_test_suite(
    name = "iceoryx2-userland-record-and-replay-tests",
    srcs = glob(["tests/**/*.rs"]),
    deps = [
        ":iceoryx2-userland-record-and-replay",
        "//iceoryx2-pal/testing:iceoryx2-pal-testing",
        "//iceoryx2-pal/concurrency-sync:iceoryx2-pal-concurrency-sync",
        "@crate_index//:serde_test",
    ],
)
