package(default_visibility = ["//visibility:public"])

load("@rules_cc//cc:defs.bzl", "cc_binary", "cc_library")

filegroup(
    name = "all_srcs",
    srcs = glob(["**"]),
)

cc_library(
    name = "iceoryx2-cxx-shared",
    srcs = glob(
        [
            "src/**",
        ],
    ),
    hdrs = glob(["include/**"]),
    strip_include_prefix = "include",
    deps = [
        "//:iceoryx2-c-shared",
        "//iceoryx2-bb/cxx:iceoryx2-bb-containers-cxx",
        "@iceoryx//:iceoryx_hoofs",
    ],
    linkstatic = False,
)

cc_library(
    name = "iceoryx2-cxx-static",
    srcs = glob(
        [
            "src/**",
        ],
    ),
    hdrs = glob(["include/**"]),
    strip_include_prefix = "include",
    deps = [
        "//:iceoryx2-c-static",
        "//iceoryx2-bb/cxx:iceoryx2-bb-containers-cxx",
        "@iceoryx//:iceoryx_hoofs",
    ],
    linkstatic = True,
)
